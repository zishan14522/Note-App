<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddNoteActivity">
    <ImageView
        android:id="@+id/backPress"
        android:layout_width="30sp"
        android:layout_height="28sp"
        android:onClick="onClick"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/arrow_back_24" />
    <ImageView
        android:id="@+id/upDateData"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/save_alt_24" />
    <TextView
        android:id="@+id/addNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="60dp"
        android:text="@string/update_notes"
        android:textColor="@color/aa"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/updateTitleEdittext"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/addNoteHeading"
        android:layout_marginTop="12dp"
        android:justificationMode="inter_word"
        android:background="@drawable/shape"
        android:hint="@string/enter_the_title"
        android:maxLines="1"
        android:padding="16dp"
        android:textSize="22sp" />


    <ImageView
        android:id="@+id/textColor2"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_below="@+id/addNoteHeading"
        android:layout_alignEnd="@+id/updateTitleEdittext"
        android:layout_alignBottom="@+id/updateTitleEdittext"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/color_text_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/updateContentEdittext"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/updateTitleEdittext"
        android:layout_marginTop="9dp"
        android:background="@drawable/shape"
        android:gravity="start"
        android:hint="@string/enter_the_descriptions"
        android:maxLines="18"
        android:justificationMode="inter_word"
        android:padding="16dp"
        android:textSize="22sp" />



</RelativeLayout>